{
  "name": "match-label-action",
  "version": "5.0.0",
  "description": "Test a pull request for one of several labels.",
  "main": "index.js",
  "scripts": {
    "lint": "xo --fix",
    "package": "ncc build index.js -o dist --source-map --license licenses.txt",
    "test": "xo && ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zwaldowski/match-label-action.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "GitHub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zwaldowski/match-label-action/issues"
  },
  "homepage": "https://github.com/zwaldowski/match-label-action#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "ava": "^6.1.2",
    "xo": "^0.59.0"
  },
  "prettier": {
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "unicorn/prefer-module": "off"
    },
    "semicolon": false,
    "space": true
  }
}
